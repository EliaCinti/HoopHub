<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!--
    Venue Manager Homepage - HoopHub
-->

<StackPane prefHeight="720" prefWidth="1280"
           stylesheets="@../css/tokens.css, @../css/components.css, @../css/pages/login.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.uniroma2.hoophub.graphic_controller.gui.VenueManagerHomepageGraphicController">

    <!-- Background Image -->
    <ImageView fitHeight="720" fitWidth="1280" pickOnBounds="true" preserveRatio="false">
        <Image backgroundLoading="true" url="@../images/sfondo_con_titolo.png"/>
    </ImageView>

    <!-- Main Content Container -->
    <VBox>

        <!-- Profile Header (Reusable Component) -->
        <fx:include source="components/profile_header.fxml"/>

        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS"/>

        <!-- Main Action Buttons -->
        <HBox alignment="CENTER" spacing="32">

            <!-- Manage Venues Button -->
            <Button fx:id="manageVenuesButton"
                    minWidth="160" minHeight="120"
                    maxWidth="160" maxHeight="120"
                    onAction="#onManageVenuesClick"
                    styleClass="user-type-card">
                <graphic>
                    <VBox alignment="CENTER" spacing="4">
                        <Label styleClass="user-type-title" text="MANAGE"/>
                        <Label styleClass="user-type-title" text="VENUES"/>
                    </VBox>
                </graphic>
            </Button>

            <!-- View Bookings Button -->
            <Button fx:id="viewBookingsButton"
                    minWidth="160" minHeight="120"
                    maxWidth="160" maxHeight="120"
                    onAction="#onViewBookingsClick"
                    styleClass="user-type-card">
                <graphic>
                    <VBox alignment="CENTER" spacing="4">
                        <Label styleClass="user-type-title" text="VIEW"/>
                        <Label styleClass="user-type-title" text="BOOKINGS"/>
                    </VBox>
                </graphic>
            </Button>

        </HBox>

        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS"/>

    </VBox>

</StackPane>