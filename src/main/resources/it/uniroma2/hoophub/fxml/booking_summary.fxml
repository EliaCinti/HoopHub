<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!--
    Booking Summary - Book Game Seat Step 3 - HoopHub
-->

<StackPane prefHeight="720" prefWidth="1280"
           stylesheets="@../css/tokens.css, @../css/components.css, @../css/pages/login.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.uniroma2.hoophub.graphic_controller.gui.BookingSummaryGraphicController">

    <!-- Background Image -->
    <ImageView fitHeight="720" fitWidth="1280" pickOnBounds="true">
        <Image backgroundLoading="true" url="@../images/sfondo_con_titolo.png"/>
    </ImageView>

    <!-- Main Content Container -->
    <VBox alignment="TOP_CENTER">

        <!-- Top Bar with Back Button -->
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="24" left="32" right="32"/>
            </padding>
            <Button fx:id="backButton" onAction="#onBackClick" styleClass="btn-back" text="â†"/>
        </HBox>

        <!-- Spacer to push content below HoopHub logo -->
        <Region prefHeight="110"/>

        <!-- Message Label (page title) -->
        <Label fx:id="msgLabel" maxWidth="600" styleClass="message-label" textAlignment="CENTER" wrapText="true">
            <VBox.margin>
                <Insets top="20" bottom="20"/>
            </VBox.margin>
        </Label>

        <!-- Content Card -->
        <VBox maxWidth="600" minWidth="600">
            <VBox.margin>
                <Insets left="32" right="32" bottom="32"/>
            </VBox.margin>

            <VBox alignment="CENTER_LEFT" spacing="16" styleClass="card">
                <padding>
                    <Insets top="24" left="24" right="24" bottom="24"/>
                </padding>

                <!-- Game Section -->
                <Label text="GAME" styleClass="section-label"/>
                <VBox spacing="4">
                    <Label fx:id="matchupLabel" styleClass="summary-title"/>
                    <HBox spacing="16">
                        <Label fx:id="dateLabel" styleClass="summary-detail"/>
                        <Label fx:id="timeLabel" styleClass="summary-detail"/>
                    </HBox>
                </VBox>

                <Separator/>

                <!-- Venue Section -->
                <Label text="VENUE" styleClass="section-label"/>
                <VBox spacing="4">
                    <Label fx:id="venueNameLabel" styleClass="summary-title"/>
                    <Label fx:id="venueTypeLabel" styleClass="summary-detail"/>
                    <Label fx:id="venueAddressLabel" styleClass="summary-detail"/>
                </VBox>

                <Separator/>

                <!-- Availability Section -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="STATUS:" styleClass="section-label"/>
                    <Label fx:id="availabilityLabel"/>
                </HBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="16">
                    <VBox.margin>
                        <Insets top="16"/>
                    </VBox.margin>
                    <Button fx:id="cancelButton" text="Cancel" styleClass="btn-secondary"
                            onAction="#onCancelClick" prefWidth="120"/>
                    <Button fx:id="confirmButton" text="Confirm Booking" styleClass="btn-primary"
                            onAction="#onConfirmClick" prefWidth="180"/>
                </HBox>

            </VBox>
        </VBox>

        <!-- Status Label (for messages/countdown) -->
        <Label fx:id="statusLabel" style="-fx-text-fill: white;" visible="false" managed="false">
            <VBox.margin>
                <Insets top="16"/>
            </VBox.margin>
        </Label>

    </VBox>
</StackPane>