<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="720" prefWidth="1280" stylesheets="@../css/tokens.css, @../css/components.css, @../css/pages/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uniroma2.hoophub.graphic_controller.gui.sign_up.SignUpFanGraphicController">

    <!-- Background Image Layer -->
    <ImageView fitHeight="720" fitWidth="1280" pickOnBounds="true" preserveRatio="false">
        <Image backgroundLoading="true" url="@../images/sfondo_con_titolo.png" />
    </ImageView>

    <!-- Content Layer -->
    <HBox alignment="CENTER" StackPane.alignment="CENTER">
        <StackPane.margin>
            <Insets top="150" />
        </StackPane.margin>

        <!-- Back Button -->
        <Button fx:id="backButton" onAction="#onBackClick" styleClass="btn-back" text="â†">
            <HBox.margin>
                <Insets right="16" />
            </HBox.margin>
        </Button>

        <!-- Sign Up Fan Card -->
        <VBox maxWidth="440" minWidth="440" spacing="0">

            <VBox alignment="CENTER" spacing="16" styleClass="card">
                <padding>
                    <Insets bottom="24" left="32" right="32" top="24" />
                </padding>

                <!-- Message Label -->
                <Label fx:id="msgLabel" maxWidth="360" styleClass="message-label" textAlignment="CENTER" wrapText="true">
                    <VBox.margin>
                        <Insets bottom="-10" />
                    </VBox.margin>
                </Label>

                <!-- Form Fields -->
                <VBox spacing="10" VBox.vgrow="NEVER">

                    <!-- Favorite Team Field -->
                    <VBox spacing="4">
                        <Label styleClass="field-label" text="Favorite NBA Team" />
                        <TextField fx:id="teamField" maxWidth="360" minHeight="40" promptText="Search team (e.g., Lakers, CHI...)" styleClass="text-field" />
                        <ListView fx:id="teamSuggestions" managed="false" maxHeight="180" maxWidth="360" styleClass="autocomplete-list" visible="false" />
                    </VBox>

                    <!-- Birthday Field -->
                    <VBox spacing="4">
                        <Label styleClass="field-label" text="Birthday" />
                        <HBox maxWidth="360" spacing="8">
                            <!-- Day -->
                            <VBox spacing="0" prefWidth="80">
                                <TextField fx:id="dayField" minHeight="40" promptText="Day" styleClass="text-field" />
                                <ListView fx:id="daySuggestions" managed="false" maxHeight="150" styleClass="autocomplete-list" visible="false" />
                            </VBox>
                            <!-- Month -->
                            <VBox spacing="0" HBox.hgrow="ALWAYS">
                                <TextField fx:id="monthField" minHeight="40" promptText="Month" styleClass="text-field" />
                                <ListView fx:id="monthSuggestions" managed="false" maxHeight="180" styleClass="autocomplete-list" visible="false" />
                            </VBox>
                            <!-- Year -->
                            <VBox spacing="0" prefWidth="100">
                                <TextField fx:id="yearField" minHeight="40" promptText="Year" styleClass="text-field" />
                                <ListView fx:id="yearSuggestions" managed="false" maxHeight="150" styleClass="autocomplete-list" visible="false" />
                            </VBox>
                        </HBox>
                    </VBox>

                </VBox>

                <!-- Sign Up Button -->
                <Button fx:id="signUpButton" defaultButton="true" maxWidth="360" minHeight="40" minWidth="360" onAction="#onSignUpClick" styleClass="btn-primary" text="Sign Up" />

                <!-- Sign In Link -->
                <HBox translateY="15" alignment="CENTER" spacing="6">
                    <Label styleClass="muted" text="Already have an account?" />
                    <Hyperlink focusTraversable="false" onAction="#onSignInClick" styleClass="link" text="Sign in" />
                </HBox>

            </VBox>
        </VBox>
    </HBox>

</StackPane>