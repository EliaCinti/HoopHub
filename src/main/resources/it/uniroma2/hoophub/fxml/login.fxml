<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!--
    Login Screen - HoopHub
    Controller: it.uniroma2.hoophub.graphic_controller.gui.LoginGraphicController
    Stylesheet: /it/uniroma2/hoophub/css/pages/login.css
-->

<StackPane prefHeight="720" prefWidth="1280" stylesheets="@../css/tokens.css, @../css/components.css, @../css/pages/login.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uniroma2.hoophub.graphic_controller.gui.LoginGraphicController">

    <!-- Background Image Layer -->
    <ImageView fitHeight="720" fitWidth="1280" pickOnBounds="true" preserveRatio="false">
        <Image backgroundLoading="true" url="@../images/sfondo_con_titolo.png" />
    </ImageView>

    <!-- Content Layer: Centered Card -->
    <VBox alignment="CENTER" translateY="50" StackPane.alignment="CENTER">

        <!-- Login Card -->
        <VBox maxWidth="440" minWidth="440" spacing="0">

            <!-- Card Content -->
            <VBox alignment="CENTER" spacing="24" styleClass="card">
                <padding>
                    <Insets bottom="36" left="40" right="40" top="36" />
                </padding>

                <!-- Error/Message Label (Initially Hidden) -->
                <Label fx:id="msgLabel" maxWidth="360" styleClass="message-label" textAlignment="CENTER" wrapText="true">
                    <VBox.margin>
                        <Insets bottom="-15" />
                    </VBox.margin>
                </Label>

                <!-- Form Fields -->
                <VBox spacing="16" VBox.vgrow="NEVER">

                    <!-- Username Field -->
                    <VBox spacing="6">
                        <Label styleClass="field-label" text="Username" />
                        <TextField fx:id="username" maxWidth="360" minHeight="44" promptText="Enter your username" styleClass="text-field" />
                    </VBox>

                    <!-- Password Field -->
                    <VBox spacing="6">
                        <Label styleClass="field-label" text="Password" />
                        <PasswordField fx:id="password" maxWidth="360" minHeight="44" onAction="#onLoginClick" promptText="Enter your password" styleClass="password-field" />
                    </VBox>

                </VBox>

                <!-- Login Button -->
                <Button fx:id="loginButton" defaultButton="true" maxWidth="360" minHeight="44" minWidth="360" onAction="#onLoginClick" styleClass="btn-primary" text="Sign In" />

                <!-- Divider with Text -->
                <HBox alignment="CENTER" maxWidth="360" spacing="12">
                    <Separator HBox.hgrow="ALWAYS" />
                    <Label styleClass="sign-in-with" text="or sign in with" />
                    <Separator HBox.hgrow="ALWAYS" />
                </HBox>

                <!-- Social Login Button (Solo Google, Full Width) -->
                <VBox alignment="CENTER" maxWidth="360" spacing="12">
                    <Button maxWidth="360" minHeight="44" minWidth="360" onAction="#onGoogleSignInClick" styleClass="btn-social">
                        <graphic>
                            <HBox alignment="CENTER" spacing="10">
                                <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                                    <Image url="@../images/IconaLoginGoogle.png" />
                                </ImageView>
                                <Label styleClass="social-label" text="Google" />
                            </HBox>
                        </graphic>
                    </Button>
                </VBox>

                <!-- Sign Up Link -->
                <HBox alignment="CENTER" spacing="6">
                    <Label styleClass="muted" text="Don't have an account?" />
                    <Hyperlink focusTraversable="false" onAction="#onSignUpClick" styleClass="link" text="Sign up" />
                </HBox>

            </VBox>
        </VBox>
    </VBox>

</StackPane>