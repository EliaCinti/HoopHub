<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!--
    Manage Venues Screen - HoopHub
    Shows list of venues managed by the current Venue Manager
-->

<StackPane prefHeight="720" prefWidth="1280"
           stylesheets="@../css/tokens.css, @../css/components.css, @../css/pages/login.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.uniroma2.hoophub.graphic_controller.gui.ManageVenuesGraphicController">

    <!-- Background Image -->
    <ImageView fitHeight="720" fitWidth="1280" pickOnBounds="true">
        <Image backgroundLoading="true" url="@../images/sfondo_con_titolo.png"/>
    </ImageView>

    <!-- Main Content Container -->
    <VBox alignment="TOP_CENTER">

        <!-- Top Bar with Back Button only -->
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="24" left="32" right="32"/>
            </padding>

            <!-- Back Button -->
            <Button onAction="#onBackClick" styleClass="btn-back" text="â†"/>
        </HBox>

        <!-- Spacer to push content below HoopHub logo -->
        <!-- Regola questo valore per posizionare la card sotto il logo -->
        <Region prefHeight="110"/>

        <!-- Message Label (acts as page title) -->
        <Label fx:id="msgLabel" maxWidth="600" styleClass="message-label" textAlignment="CENTER" wrapText="true">
            <VBox.margin>
                <Insets top="20" bottom="20"/>
            </VBox.margin>
        </Label>

        <!-- Content Card -->
        <VBox maxWidth="900" minWidth="900" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets left="32" right="32" bottom="32"/>
            </VBox.margin>

            <VBox alignment="TOP_CENTER" spacing="20" styleClass="card" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="24" left="24" right="24" bottom="24"/>
                </padding>

                <!-- Venues List Container (ScrollPane) -->
                <ScrollPane fx:id="venuesScrollPane" fitToWidth="true"
                            styleClass="venues-scroll-pane" VBox.vgrow="ALWAYS"
                            hbarPolicy="NEVER">

                    <!-- Venues will be added here dynamically -->
                    <VBox fx:id="venuesContainer" spacing="12" alignment="TOP_CENTER">
                        <padding>
                            <Insets top="4" left="4" right="12" bottom="4"/>
                        </padding>
                    </VBox>
                </ScrollPane>

                <!-- Empty State (shown when no venues) -->
                <VBox fx:id="emptyState" alignment="CENTER" spacing="8" visible="false" managed="false">
                    <Label styleClass="muted" text="You haven't added any venues yet."/>
                    <Label styleClass="small-text" text="Click the button below to add your first venue!"/>
                </VBox>

                <!-- Add New Venue Button -->
                <Button fx:id="addVenueButton" onAction="#onAddVenueClick"
                        styleClass="btn-primary" text="+ Add New Venue"
                        minWidth="200" minHeight="44">
                    <VBox.margin>
                        <Insets top="8"/>
                    </VBox.margin>
                </Button>

            </VBox>
        </VBox>

    </VBox>

</StackPane>